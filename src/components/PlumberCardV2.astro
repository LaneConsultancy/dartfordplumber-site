---
interface Props {
  name: string;
  address: string;
  phone: string;
  website: string;
  rating: number;
  categories: string[];
  slug: string;
}

const { name, address, phone, rating, categories, slug } = Astro.props;
---

<article class="plumber-card">
  <div class="plumber-card__content">
    <!-- Header -->
    <div class="plumber-card__header">
      <h3 class="plumber-card__name">
        {name}
      </h3>

      <!-- Star Rating - simple badge -->
      <div class="plumber-card__rating">
        <svg class="plumber-card__star" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
        </svg>
        <span>{rating.toFixed(1)}</span>
      </div>
    </div>

    <!-- Address -->
    <div class="plumber-card__address">
      <svg class="plumber-card__icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
      </svg>
      <span>{address}</span>
    </div>

    <!-- Categories - simple gray pills -->
    {categories.length > 0 && (
      <div class="plumber-card__categories">
        {categories.slice(0, 3).map((category) => (
          <span class="plumber-card__category">
            {category}
          </span>
        ))}
      </div>
    )}

    <!-- Actions - two simple text links -->
    <div class="plumber-card__actions">
      <a href={`tel:${phone.replace(/\s/g, '')}`} class="plumber-card__link plumber-card__link--phone">
        <svg class="plumber-card__phone-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
        </svg>
        Call Now
      </a>
      <a href={`/plumbers/${slug}`} class="plumber-card__link">
        View Details <span aria-hidden="true">â†’</span>
      </a>
    </div>
  </div>
</article>

<style>
  .plumber-card {
    background: var(--color-bg);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--border-radius-lg);
    transition: all var(--transition-base);
    box-shadow: var(--shadow-base);
  }

  .plumber-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .plumber-card__content {
    padding: var(--space-6);
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  /* Header */
  .plumber-card__header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: var(--space-4);
  }

  .plumber-card__name {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    color: var(--color-gray-950);
  }

  .plumber-card__rating {
    display: flex;
    align-items: center;
    gap: var(--space-1);
    background: var(--color-accent);
    color: white;
    padding: var(--space-1) var(--space-2);
    border-radius: var(--border-radius-full);
    font-size: var(--text-sm);
    font-weight: var(--font-bold);
    flex-shrink: 0;
  }

  .plumber-card__star {
    width: 1rem;
    height: 1rem;
  }

  /* Address */
  .plumber-card__address {
    display: flex;
    align-items: flex-start;
    gap: var(--space-2);
    color: var(--color-text-muted);
    font-size: var(--text-base);
  }

  .plumber-card__icon {
    width: 1.25rem;
    height: 1.25rem;
    flex-shrink: 0;
    margin-top: 2px;
  }

  /* Categories */
  .plumber-card__categories {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  .plumber-card__category {
    display: inline-flex;
    padding: var(--space-1) var(--space-3);
    font-size: var(--text-xs);
    font-weight: var(--font-semibold);
    color: var(--color-primary);
    background: var(--color-gray-100);
    border-radius: var(--border-radius-full);
  }

  /* Actions */
  .plumber-card__actions {
    margin-top: var(--space-2);
    padding-top: var(--space-4);
    border-top: 1px solid var(--color-gray-100);
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--space-4);
  }

  .plumber-card__link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-base);
    font-weight: var(--font-bold);
    color: var(--color-primary);
    text-decoration: none;
    transition: color var(--transition-base);
  }

  .plumber-card__link:hover {
    color: var(--color-primary-dark);
  }

  .plumber-card__link--phone {
    color: var(--color-accent);
  }

  .plumber-card__link--phone:hover {
    color: var(--color-accent-dark);
  }

  .plumber-card__phone-icon {
    width: 1.125rem;
    height: 1.125rem;
  }
</style>
