---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroV2 from '../components/HeroV2.astro';
import PlumberCardV2 from '../components/PlumberCardV2.astro';
import Footer from '../components/Footer.astro';
import plumbersData from '../data/top-plumbers.json';

// Generate slugs for plumbers
const plumbers = plumbersData.map(plumber => ({
  ...plumber,
  slug: plumber.name.toLowerCase().replace(/[^a-z0-9]+/g, '-').replace(/^-|-$/g, '')
}));

// Schema.org structured data for Drainage Service
const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": "Drainage Services",
  "provider": {
    "@type": "LocalBusiness",
    "name": "Dartford Plumbers",
    "areaServed": {
      "@type": "City",
      "name": "Dartford"
    }
  },
  "areaServed": {
    "@type": "City",
    "name": "Dartford",
    "containedInPlace": {
      "@type": "AdministrativeArea",
      "name": "Kent"
    }
  },
  "description": "Professional drainage services in Dartford. Blocked drains cleared, drain repairs, CCTV surveys, and drainage maintenance.",
  "availableChannel": {
    "@type": "ServiceChannel",
    "servicePhone": {
      "@type": "ContactPoint",
      "telephone": "01322 936116",
      "contactType": "Customer Service"
    }
  }
};
---

<BaseLayout
  title="Drainage Services Dartford | Blocked Drains & Drain Repairs"
  description="Expert drainage services in Dartford. Blocked drains cleared fast, drain repairs, CCTV drain surveys and drainage maintenance. Available 24/7 for emergencies."
>
  <!-- Schema.org JSON-LD -->
  <script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />

  <!-- Hero Section -->
  <HeroV2
    headline="Drainage Services Dartford"
    subheadline="Blocked Drains | Drain Repairs | CCTV Surveys | 24/7 Available"
    backgroundImage="/images/service-drainage.jpg"
    primaryCTA="Find Drainage Specialists"
    primaryCTAHref="#drainage-specialists"
    secondaryCTA="Call Now: 01322 936116"
    secondaryCTAHref="tel:01322936116"
  />

  <!-- Service Introduction -->
  <section class="service-intro">
    <div class="service-intro__container section-container">
      <h2 class="section-heading">Professional Drainage Services in Dartford</h2>
      <div class="service-intro__content">
        <p class="service-intro__text">
          Fast, reliable drainage services from Dartford's trusted drainage specialists. Whether you have a blocked drain, need a drain repair, or require a CCTV drain survey, our experienced drainage engineers are here to help with professional solutions and competitive prices.
        </p>
        <p class="service-intro__text">
          We use the latest drainage equipment and techniques to diagnose and fix drainage problems quickly and efficiently. From simple drain unblocking to complex drain repairs and replacements, we handle all types of drainage work for domestic and commercial customers across Dartford.
        </p>
      </div>
    </div>
  </section>

  <!-- Services Offered -->
  <section class="services-offered">
    <div class="services-offered__container section-container">
      <h2 class="section-heading">Our Drainage Services</h2>
      <div class="services-offered__grid">
        <div class="service-card">
          <h3 class="service-card__title">Blocked Drain Clearance</h3>
          <p class="service-card__description">
            Fast drain unblocking using high-pressure water jetting and mechanical drain cleaning. We clear blocked sinks, toilets, showers, outside drains, and main sewer lines.
          </p>
        </div>
        <div class="service-card">
          <h3 class="service-card__title">CCTV Drain Surveys</h3>
          <p class="service-card__description">
            Advanced CCTV drain camera inspections to locate blockages, damage, and structural issues. Detailed survey reports with photos and recommendations.
          </p>
        </div>
        <div class="service-card">
          <h3 class="service-card__title">Drain Repairs</h3>
          <p class="service-card__description">
            Professional drain repairs including patch lining, drain excavation, and drain replacement. We fix cracked, collapsed, and damaged drainage systems.
          </p>
        </div>
        <div class="service-card">
          <h3 class="service-card__title">Drain Jetting</h3>
          <p class="service-card__description">
            High-pressure water jetting to clear stubborn blockages and clean drain pipes. Removes scale, grease, tree roots, and debris effectively.
          </p>
        </div>
        <div class="service-card">
          <h3 class="service-card__title">Drain Excavation</h3>
          <p class="service-card__description">
            Full drain excavation and replacement when necessary. We minimize disruption and restore your property after completing excavation work.
          </p>
        </div>
        <div class="service-card">
          <h3 class="service-card__title">Preventive Maintenance</h3>
          <p class="service-card__description">
            Regular drainage maintenance to prevent blockages and extend the life of your drainage system. Includes cleaning and inspection services.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Common Drainage Problems -->
  <section class="common-problems">
    <div class="common-problems__container section-container">
      <h2 class="section-heading">Common Drainage Problems We Fix</h2>
      <div class="common-problems__grid">
        <div class="problem-card">
          <h3 class="problem-card__title">Slow Draining Sinks</h3>
          <p class="problem-card__description">
            Build-up of hair, soap, and grease causing slow drainage in bathroom and kitchen sinks.
          </p>
        </div>
        <div class="problem-card">
          <h3 class="problem-card__title">Blocked Toilets</h3>
          <p class="problem-card__description">
            Toilet blockages caused by excessive paper, sanitary products, or main drain issues.
          </p>
        </div>
        <div class="problem-card">
          <h3 class="problem-card__title">Foul Smells</h3>
          <p class="problem-card__description">
            Bad odours from drains caused by blockages, broken seals, or damaged drainage pipes.
          </p>
        </div>
        <div class="problem-card">
          <h3 class="problem-card__title">Gurgling Drains</h3>
          <p class="problem-card__description">
            Strange gurgling sounds indicating a partial blockage or ventilation problem in your drainage system.
          </p>
        </div>
        <div class="problem-card">
          <h3 class="problem-card__title">Outside Drain Blockages</h3>
          <p class="problem-card__description">
            Blocked external drains and gullies causing water to back up or overflow in your garden or driveway.
          </p>
        </div>
        <div class="problem-card">
          <h3 class="problem-card__title">Tree Root Ingress</h3>
          <p class="problem-card__description">
            Tree roots growing into drainage pipes, causing blockages and structural damage to the drainage system.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Section -->
  <section class="why-choose">
    <div class="why-choose__container section-container">
      <h2 class="section-heading">Why Choose Our Drainage Specialists?</h2>
      <div class="why-choose__grid">
        <div class="feature-card">
          <div class="feature-card__icon">üöÄ</div>
          <h3 class="feature-card__title">Fast Response</h3>
          <p class="feature-card__description">
            Emergency drainage services available 24/7. We aim to reach you quickly, especially for urgent drainage problems.
          </p>
        </div>
        <div class="feature-card">
          <div class="feature-card__icon">üîç</div>
          <h3 class="feature-card__title">Latest Equipment</h3>
          <p class="feature-card__description">
            State-of-the-art CCTV drain cameras and high-pressure jetting equipment for effective drainage solutions.
          </p>
        </div>
        <div class="feature-card">
          <div class="feature-card__icon">üí™</div>
          <h3 class="feature-card__title">Experienced Engineers</h3>
          <p class="feature-card__description">
            Qualified drainage engineers with years of experience fixing all types of drainage problems.
          </p>
        </div>
        <div class="feature-card">
          <div class="feature-card__icon">üí∑</div>
          <h3 class="feature-card__title">Competitive Prices</h3>
          <p class="feature-card__description">
            Honest, upfront pricing with no call-out fees. We'll provide a clear quote before starting any work.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Drainage Specialists Directory -->
  <section id="drainage-specialists" class="specialists-directory">
    <div class="specialists-directory__container section-container">
      <h2 class="section-heading">Drainage Specialists in Dartford</h2>
      <p class="section-subheading">
        Contact these trusted drainage specialists for fast, professional drainage services in Dartford.
      </p>
      <div class="specialists-directory__grid">
        {plumbers.map((plumber) => (
          <PlumberCardV2 {...plumber} />
        ))}
      </div>
    </div>
  </section>

  <!-- Coverage Area -->
  <section class="coverage-area">
    <div class="coverage-area__container section-container">
      <h2 class="section-heading">Drainage Services Coverage</h2>
      <p class="coverage-area__text">
        Our drainage specialists serve Dartford and all surrounding areas including Greenhithe, Stone, Wilmington, Swanscombe, Bean, Longfield, Sutton-at-Hone, and throughout the DA1, DA2, and DA3 postcodes.
      </p>
      <div class="coverage-area__badges">
        <span class="coverage-badge">Dartford DA1</span>
        <span class="coverage-badge">Dartford DA2</span>
        <span class="coverage-badge">Dartford DA3</span>
        <span class="coverage-badge">Greenhithe</span>
        <span class="coverage-badge">Stone</span>
        <span class="coverage-badge">Swanscombe</span>
        <span class="coverage-badge">Wilmington</span>
        <span class="coverage-badge">Longfield</span>
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="final-cta">
    <div class="final-cta__container section-container">
      <h2 class="final-cta__heading">Need Drainage Services?</h2>
      <p class="final-cta__description">
        Get in touch with one of our trusted drainage specialists for fast, professional drainage solutions in Dartford.
      </p>
      <a href="#drainage-specialists" class="final-cta__button">
        View Drainage Specialists
      </a>
    </div>
  </section>

  <Footer />
</BaseLayout>

<style>
  /* Base Section Styles */
  section {
    padding: var(--space-16) var(--space-6);
  }

  @media (min-width: 768px) {
    section {
      padding: var(--space-20) var(--space-8);
    }
  }

  @media (min-width: 1024px) {
    section {
      padding: var(--space-24) var(--space-10);
    }
  }

  .section-container {
    max-width: 1280px;
    margin: 0 auto;
  }

  .section-heading {
    font-family: var(--font-display);
    font-size: var(--text-4xl);
    font-weight: var(--font-bold);
    line-height: var(--leading-tight);
    color: var(--color-gray-950);
    text-align: center;
    margin: 0 0 var(--space-12) 0;
  }

  .section-subheading {
    font-family: var(--font-body);
    font-size: var(--text-lg);
    font-weight: var(--font-normal);
    line-height: var(--leading-relaxed);
    color: var(--color-text-muted);
    text-align: center;
    max-width: 70ch;
    margin: calc(var(--space-12) * -1 + var(--space-4)) auto var(--space-12) auto;
  }

  /* Service Intro */
  .service-intro {
    background: var(--color-bg);
  }

  .service-intro__container {
    max-width: 900px;
    margin: 0 auto;
  }

  .service-intro__content {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  .service-intro__text {
    font-size: var(--text-lg);
    line-height: var(--leading-relaxed);
    color: var(--color-text-muted);
    text-align: center;
  }

  /* Services Offered & Common Problems */
  .services-offered {
    background: var(--color-bg-alt);
  }

  .services-offered__grid,
  .common-problems__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-6);
  }

  .service-card,
  .problem-card {
    background: white;
    padding: var(--space-6);
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-sm);
    transition: all var(--transition-base);
  }

  .service-card:hover,
  .problem-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .service-card__title,
  .problem-card__title {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    color: var(--color-gray-950);
    margin-bottom: var(--space-3);
  }

  .service-card__description,
  .problem-card__description {
    font-size: var(--text-base);
    line-height: var(--leading-relaxed);
    color: var(--color-text-muted);
  }

  /* Common Problems */
  .common-problems {
    background: var(--color-bg);
  }

  /* Why Choose */
  .why-choose {
    background: var(--color-bg-alt);
  }

  .why-choose__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-8);
  }

  .feature-card {
    text-align: center;
  }

  .feature-card__icon {
    font-size: var(--text-5xl);
    margin-bottom: var(--space-4);
  }

  .feature-card__title {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    color: var(--color-gray-950);
    margin-bottom: var(--space-3);
  }

  .feature-card__description {
    font-size: var(--text-base);
    line-height: var(--leading-relaxed);
    color: var(--color-text-muted);
  }

  /* Specialists Directory */
  .specialists-directory {
    background: var(--color-bg);
  }

  .specialists-directory__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: var(--space-8);
  }

  /* Coverage Area */
  .coverage-area {
    background: var(--color-bg-alt);
    text-align: center;
  }

  .coverage-area__text {
    font-size: var(--text-lg);
    line-height: var(--leading-relaxed);
    color: var(--color-text-muted);
    max-width: 80ch;
    margin: 0 auto var(--space-8) auto;
  }

  .coverage-area__badges {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-3);
  }

  .coverage-badge {
    display: inline-block;
    padding: var(--space-2) var(--space-4);
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    color: var(--color-primary);
    background-color: var(--color-gray-100);
    border-radius: var(--border-radius-full);
    transition: all var(--transition-base);
  }

  .coverage-badge:hover {
    background-color: var(--color-gray-200);
    transform: translateY(-2px);
  }

  /* Final CTA */
  .final-cta {
    background: var(--color-primary);
    color: white;
    text-align: center;
  }

  .final-cta__heading {
    color: white;
    margin-bottom: var(--space-4);
  }

  .final-cta__description {
    color: var(--color-gray-200);
    margin-bottom: var(--space-8);
    font-size: var(--text-lg);
    max-width: 60ch;
    margin-left: auto;
    margin-right: auto;
  }

  .final-cta__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-4) var(--space-8);
    font-size: var(--text-lg);
    font-weight: var(--font-bold);
    text-decoration: none;
    background-color: var(--color-accent);
    color: white;
    border-radius: var(--border-radius-lg);
    transition: all var(--transition-base);
    box-shadow: var(--shadow-lg);
  }

  .final-cta__button:hover {
    background-color: var(--color-accent-dark);
    transform: translateY(-3px);
    box-shadow: var(--shadow-xl);
  }
</style>
