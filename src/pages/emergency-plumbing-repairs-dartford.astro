---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroV2 from '../components/HeroV2.astro';
import PlumberCardV2 from '../components/PlumberCardV2.astro';
import Footer from '../components/Footer.astro';
import plumbersData from '../data/top-plumbers.json';

// Generate slugs for plumbers
const plumbers = plumbersData.map(plumber => ({
  ...plumber,
  slug: plumber.name.toLowerCase().replace(/[^a-z0-9]+/g, '-').replace(/^-|-$/g, '')
}));

// Schema.org structured data for Emergency Plumbing Service
const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": "Emergency Plumbing Repairs",
  "provider": {
    "@type": "LocalBusiness",
    "name": "Dartford Plumbers",
    "areaServed": {
      "@type": "City",
      "name": "Dartford"
    }
  },
  "areaServed": {
    "@type": "City",
    "name": "Dartford",
    "containedInPlace": {
      "@type": "AdministrativeArea",
      "name": "Kent"
    }
  },
  "description": "24/7 emergency plumbing repairs in Dartford. Fast response for burst pipes, leaks, blocked toilets and urgent plumbing issues.",
  "availableChannel": {
    "@type": "ServiceChannel",
    "servicePhone": {
      "@type": "ContactPoint",
      "telephone": "01322 936116",
      "contactType": "Emergency Service"
    }
  }
};
---

<BaseLayout
  title="Emergency Plumbing Repairs Dartford | 24/7 Fast Response"
  description="Need an emergency plumber in Dartford? 24/7 fast response for burst pipes, leaks, blocked toilets and urgent repairs. Call now for immediate assistance."
>
  <!-- Schema.org JSON-LD -->
  <script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />

  <!-- Hero Section -->
  <HeroV2
    headline="Emergency Plumbing Repairs Dartford"
    subheadline="24/7 Fast Response | Burst Pipes | Leaks | Blocked Drains"
    backgroundImage="/images/service-emergency-repairs.jpg"
    primaryCTA="Find Emergency Plumbers"
    primaryCTAHref="#emergency-plumbers"
    secondaryCTA="Call Now: 01322 936116"
    secondaryCTAHref="tel:01322936116"
  />

  <!-- Service Introduction -->
  <section class="service-intro">
    <div class="service-intro__container section-container">
      <h2 class="section-heading">24/7 Emergency Plumbing Services in Dartford</h2>
      <div class="service-intro__content">
        <p class="service-intro__text">
          When plumbing emergencies strike, you need a fast, reliable plumber in Dartford who can respond immediately. Our trusted network of emergency plumbers provides 24/7 coverage across Dartford and surrounding areas, ensuring help is always available when you need it most.
        </p>
        <p class="service-intro__text">
          Whether it's a burst pipe flooding your home, a blocked toilet causing overflow, or a major leak threatening property damage, our emergency plumbers are equipped to handle any urgent plumbing situation quickly and professionally.
        </p>
      </div>
    </div>
  </section>

  <!-- Common Emergencies -->
  <section class="common-emergencies">
    <div class="common-emergencies__container section-container">
      <h2 class="section-heading">Common Plumbing Emergencies We Handle</h2>
      <div class="common-emergencies__grid">
        <div class="emergency-card">
          <h3 class="emergency-card__title">Burst Pipes</h3>
          <p class="emergency-card__description">
            Immediate response to burst pipes causing flooding or water damage. We'll stop the leak and repair or replace damaged pipework.
          </p>
        </div>
        <div class="emergency-card">
          <h3 class="emergency-card__title">Major Leaks</h3>
          <p class="emergency-card__description">
            Fast detection and repair of leaking pipes, joints, or fixtures before they cause serious water damage to your property.
          </p>
        </div>
        <div class="emergency-card">
          <h3 class="emergency-card__title">Blocked Toilets & Drains</h3>
          <p class="emergency-card__description">
            Professional drain unblocking service for severely blocked toilets, sinks, or drains causing overflow or backup.
          </p>
        </div>
        <div class="emergency-card">
          <h3 class="emergency-card__title">Boiler Breakdowns</h3>
          <p class="emergency-card__description">
            Emergency boiler repairs to restore your heating and hot water, especially critical during cold weather.
          </p>
        </div>
        <div class="emergency-card">
          <h3 class="emergency-card__title">Hot Water System Failures</h3>
          <p class="emergency-card__description">
            Rapid diagnosis and repair of hot water system problems to restore your hot water supply quickly.
          </p>
        </div>
        <div class="emergency-card">
          <h3 class="emergency-card__title">Gas Leaks</h3>
          <p class="emergency-card__description">
            Urgent qualified engineers for suspected gas leaks. Your safety is our top priority.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Section -->
  <section class="why-choose">
    <div class="why-choose__container section-container">
      <h2 class="section-heading">Why Choose Dartford Emergency Plumbers?</h2>
      <div class="why-choose__grid">
        <div class="feature-card">
          <div class="feature-card__icon">‚ö°</div>
          <h3 class="feature-card__title">Rapid Response</h3>
          <p class="feature-card__description">
            We understand emergencies can't wait. Our plumbers aim to reach you within the hour for urgent callouts.
          </p>
        </div>
        <div class="feature-card">
          <div class="feature-card__icon">üïê</div>
          <h3 class="feature-card__title">24/7 Availability</h3>
          <p class="feature-card__description">
            Day or night, weekends and bank holidays ‚Äì our emergency plumbers are always available when you need them.
          </p>
        </div>
        <div class="feature-card">
          <div class="feature-card__icon">üõ†Ô∏è</div>
          <h3 class="feature-card__title">Fully Equipped</h3>
          <p class="feature-card__description">
            Our emergency vans carry a comprehensive range of parts and tools to fix most problems on the first visit.
          </p>
        </div>
        <div class="feature-card">
          <div class="feature-card__icon">‚úÖ</div>
          <h3 class="feature-card__title">Professional & Qualified</h3>
          <p class="feature-card__description">
            Our emergency plumbers are experienced professionals who maintain appropriate qualifications for the work they undertake.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Emergency Plumbers Directory -->
  <section id="emergency-plumbers" class="plumbers-directory">
    <div class="plumbers-directory__container section-container">
      <h2 class="section-heading">Emergency Plumbers in Dartford</h2>
      <p class="section-subheading">
        Contact these trusted emergency plumbers for immediate assistance with your plumbing emergency in Dartford.
      </p>
      <div class="plumbers-directory__grid">
        {plumbers.map((plumber) => (
          <PlumberCardV2 {...plumber} />
        ))}
      </div>
    </div>
  </section>

  <!-- Coverage Area -->
  <section class="coverage-area">
    <div class="coverage-area__container section-container">
      <h2 class="section-heading">Emergency Plumbing Coverage</h2>
      <p class="coverage-area__text">
        Our emergency plumbers serve Dartford and surrounding areas including Greenhithe, Stone, Wilmington, Swanscombe, Bean, Longfield, Sutton-at-Hone, and throughout the DA1, DA2, and DA3 postcodes.
      </p>
      <div class="coverage-area__badges">
        <span class="coverage-badge">Dartford DA1</span>
        <span class="coverage-badge">Dartford DA2</span>
        <span class="coverage-badge">Dartford DA3</span>
        <span class="coverage-badge">Greenhithe</span>
        <span class="coverage-badge">Stone</span>
        <span class="coverage-badge">Swanscombe</span>
        <span class="coverage-badge">Wilmington</span>
        <span class="coverage-badge">Longfield</span>
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="final-cta">
    <div class="final-cta__container section-container">
      <h2 class="final-cta__heading">Need an Emergency Plumber Now?</h2>
      <p class="final-cta__description">
        Don't wait when you have a plumbing emergency. Contact one of our trusted Dartford plumbers for immediate assistance.
      </p>
      <a href="#emergency-plumbers" class="final-cta__button">
        View Emergency Plumbers
      </a>
    </div>
  </section>

  <Footer />
</BaseLayout>

<style>
  /* Base Section Styles */
  section {
    padding: var(--space-16) var(--space-6);
  }

  @media (min-width: 768px) {
    section {
      padding: var(--space-20) var(--space-8);
    }
  }

  @media (min-width: 1024px) {
    section {
      padding: var(--space-24) var(--space-10);
    }
  }

  .section-container {
    max-width: 1280px;
    margin: 0 auto;
  }

  .section-heading {
    font-family: var(--font-display);
    font-size: var(--text-4xl);
    font-weight: var(--font-bold);
    line-height: var(--leading-tight);
    color: var(--color-gray-950);
    text-align: center;
    margin: 0 0 var(--space-12) 0;
  }

  .section-subheading {
    font-family: var(--font-body);
    font-size: var(--text-lg);
    font-weight: var(--font-normal);
    line-height: var(--leading-relaxed);
    color: var(--color-text-muted);
    text-align: center;
    max-width: 70ch;
    margin: calc(var(--space-12) * -1 + var(--space-4)) auto var(--space-12) auto;
  }

  /* Service Intro */
  .service-intro {
    background: var(--color-bg);
  }

  .service-intro__container {
    max-width: 900px;
    margin: 0 auto;
  }

  .service-intro__content {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  .service-intro__text {
    font-size: var(--text-lg);
    line-height: var(--leading-relaxed);
    color: var(--color-text-muted);
    text-align: center;
  }

  /* Common Emergencies */
  .common-emergencies {
    background: var(--color-bg-alt);
  }

  .common-emergencies__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-6);
  }

  .emergency-card {
    background: white;
    padding: var(--space-6);
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-sm);
    transition: all var(--transition-base);
  }

  .emergency-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .emergency-card__title {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    color: var(--color-gray-950);
    margin-bottom: var(--space-3);
  }

  .emergency-card__description {
    font-size: var(--text-base);
    line-height: var(--leading-relaxed);
    color: var(--color-text-muted);
  }

  /* Why Choose */
  .why-choose {
    background: var(--color-bg);
  }

  .why-choose__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-8);
  }

  .feature-card {
    text-align: center;
  }

  .feature-card__icon {
    font-size: var(--text-5xl);
    margin-bottom: var(--space-4);
  }

  .feature-card__title {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    color: var(--color-gray-950);
    margin-bottom: var(--space-3);
  }

  .feature-card__description {
    font-size: var(--text-base);
    line-height: var(--leading-relaxed);
    color: var(--color-text-muted);
  }

  /* Plumbers Directory */
  .plumbers-directory {
    background: var(--color-bg-alt);
  }

  .plumbers-directory__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: var(--space-8);
  }

  /* Coverage Area */
  .coverage-area {
    background: var(--color-bg);
    text-align: center;
  }

  .coverage-area__text {
    font-size: var(--text-lg);
    line-height: var(--leading-relaxed);
    color: var(--color-text-muted);
    max-width: 80ch;
    margin: 0 auto var(--space-8) auto;
  }

  .coverage-area__badges {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-3);
  }

  .coverage-badge {
    display: inline-block;
    padding: var(--space-2) var(--space-4);
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    color: var(--color-primary);
    background-color: var(--color-gray-100);
    border-radius: var(--border-radius-full);
    transition: all var(--transition-base);
  }

  .coverage-badge:hover {
    background-color: var(--color-gray-200);
    transform: translateY(-2px);
  }

  /* Final CTA */
  .final-cta {
    background: var(--color-primary);
    color: white;
    text-align: center;
  }

  .final-cta__heading {
    color: white;
    margin-bottom: var(--space-4);
  }

  .final-cta__description {
    color: var(--color-gray-200);
    margin-bottom: var(--space-8);
    font-size: var(--text-lg);
    max-width: 60ch;
    margin-left: auto;
    margin-right: auto;
  }

  .final-cta__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-4) var(--space-8);
    font-size: var(--text-lg);
    font-weight: var(--font-bold);
    text-decoration: none;
    background-color: var(--color-accent);
    color: white;
    border-radius: var(--border-radius-lg);
    transition: all var(--transition-base);
    box-shadow: var(--shadow-lg);
  }

  .final-cta__button:hover {
    background-color: var(--color-accent-dark);
    transform: translateY(-3px);
    box-shadow: var(--shadow-xl);
  }
</style>
